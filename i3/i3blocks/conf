# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=~/.i3/i3blocks/scripts/$BLOCK_NAME
markup=pango
separator_block_width=15

# Packages available
[packages]
interval=300

# System monitor
[load]
interval=10
separator=false
separator_block_width=7

[temperature]
interval=10

# Memory usage
[memory]
instance=mem;free
interval=30

# Disk usage
[disk]
interval=30
separator=false
separator_block_width=7

[hddtemp]
color=#859900
interval=10

# Wifi
[network]
instance=wlp2s0
interval=10

# Ethernet
[network]
instance=enp4s0
interval=10

# Volume indicator
[audio]
interval=1

# Weather
[weather]
color=#93A1A1
command=~/.i3/i3blocks/scripts/$BLOCK_NAME/$BLOCK_NAME.py
interval=300

# Date Time
[time]
color=#93A1A1
command=date '+ %d.%m.%Y  %H:%M'
interval=5
