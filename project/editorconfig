# Put this file as '.editorconfig' in project's folder
# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.go]
indent_size = 4
indent_style = tab

[*.py]
indent_size = 4

# Makefile prefered only tabs
[[mM]akefile]
indent_style = tab
