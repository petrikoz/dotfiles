[user]
	name = Petr Zelenin
[push]
	default = simple
[alias]
	a = add
	b = branch
	c = commit -v
	co = checkout
	d = diff
	fo = fetch -v origin
	foc = !git fetch -v origin "$(git rev-parse --abbrev-ref HEAD)"
	k = !gitk --all --branches
	l = log
	ll = log --graph --pretty='%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
	m = merge
	pl = pull
	plc = !git pull origin "$(git rev-parse --abbrev-ref HEAD)"
	ps = push
	psa = push --all
	reb = rebase
	res = reset
	resh = reset --hard
	s = status
	ss = status -s
